#!/usr/bin/make -f


export DH_VERBOSE=1
export PYBUILD_NAME=res-accounting
export PYBUILD_DISABLE=test

%:
	dh $@ --with python3 --buildsystem=pybuild


override_dh_install:
	dh_install
	mkdir -p debian/res-accounting-service/usr/share/res/core
	cp res/core/requirements/base.txt debian/res-accounting-service/usr/share/res/core/requirements.txt

